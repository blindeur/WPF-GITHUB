<Window x:Class="intro_WPF_ex_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intro_WPF_ex_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
    <Grid>
        <!-- Définir deux colonnes de taille égale -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- TextBox à gauche -->
        <TextBox Grid.Column="0"
                 Width="300" Height="235"
                 Text="hello"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />

        <!-- Bouton au centre de la partie droite -->
        <Button Grid.Column="1"
                Width="50" Height="50"
                Content="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
    </Grid>
</Window>
