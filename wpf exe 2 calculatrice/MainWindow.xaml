<Window x:Class="wpf_exe_2_calculatrice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_exe_2_calculatrice"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400"
        Background="LightSeaGreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="Display" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" FontSize="24" IsReadOnly="True" TextAlignment="Right" VerticalContentAlignment="Center" Margin="5"/>
        <Button Content="C" Grid.Row="0" Grid.Column="3" FontSize="24" Click="Clear_Click" Background="red" Margin="5"/>
        <Button Content="1" Grid.Row="1" Grid.Column="0" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="2" Grid.Row="1" Grid.Column="1" FontSize="24" Click="Number_Click" Background="BlueViolet"  Margin="5"/>
        <Button Content="3" Grid.Row="1" Grid.Column="2" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="+" Grid.Row="1" Grid.Column="3" FontSize="24" Click="Operator_Click" Background="GreenYellow" Margin="5"/>
        <Button Content="4" Grid.Row="2" Grid.Column="0" FontSize="24" Click="Number_Click" Background="BlueViolet"  Margin="5"/>
        <Button Content="5" Grid.Row="2" Grid.Column="1" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="6" Grid.Row="2" Grid.Column="2" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="-" Grid.Row="2" Grid.Column="3" FontSize="24" Click="Operator_Click" Background="GreenYellow" Margin="5"/>
        <Button Content="7" Grid.Row="3" Grid.Column="0" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="8" Grid.Row="3" Grid.Column="1" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="9" Grid.Row="3" Grid.Column="2" FontSize="24" Click="Number_Click" Background="BlueViolet" Margin="5"/>
        <Button Content="/" Grid.Row="3" Grid.Column="3" FontSize="24" Click="Operator_Click" Background="GreenYellow" Margin="5"/>
        <Button Content="," Grid.Row="4" Grid.Column="0" FontSize="24" Click="Number_Click" Background="Violet" Margin="5"/>
        <Button Content="0" Grid.Row="4" Grid.Column="1" FontSize="24" Click="Equals_Click" Background="BlueViolet"  Margin="5"/>
        <Button Content="*" Grid.Row="4" Grid.Column="2" FontSize="24" Click="Operator_Click" Background="GreenYellow" Margin="5"/>
        <Button Content="=" Grid.Row="4" Grid.Column="3" FontSize="24" Click="Equals_Click" Background="LightGreen" Margin="5"/>


    </Grid>
</Window>
