<Window x:Class="layouts_wpf_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:layouts_wpf_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
         </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
         </Grid.RowDefinitions>
        <StackPanel>
            <Button Content="Button 1" Height="100"/>
            <Button Content="Button 2" Height="100"/>
        </StackPanel>
        <DockPanel Grid.Column="1">
            <Button DockPanel.Dock="Top" Height="50">Top</Button>
            <Button DockPanel.Dock="Bottom" Height="50">Bottom</Button>
            <Button DockPanel.Dock="Left" Width="50">Left</Button>
            <Button DockPanel.Dock="Right" Width="50">Right</Button>
            <Button>Center</Button>
        </DockPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="100">bouton 1</Button>
            <Button Width="100" >bouton 2</Button>
            <Button Width="100" >bouton 3</Button>
            <Button Width="100" Height="100">bouton 4</Button>
            <Button Width="100" Height="100">bouton 5</Button>
            <Button Width="100" Height="100">bouton 6</Button>
        </WrapPanel>
        <Canvas    Grid.Column="1" Grid.Row="1" >

           
        </Canvas>

      
       

    </Grid>
</Window>
